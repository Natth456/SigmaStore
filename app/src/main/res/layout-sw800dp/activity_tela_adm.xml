<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".Tela_Adm">

    <Button
        android:id="@+id/adicionar_produto"
        android:layout_width="471dp"
        android:layout_height="76dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="47dp"
        android:backgroundTint="#040404"
        android:text="Adicionar"
        app:layout_constraintBottom_toTopOf="@+id/voltar_adm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lista_produtos_adm"
        app:layout_constraintTop_toBottomOf="@+id/Preco_Produto" />

    <Button
        android:id="@+id/voltar_adm"
        android:layout_width="467dp"
        android:layout_height="81dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#040404"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lista_produtos_adm"
        app:layout_constraintTop_toBottomOf="@+id/adicionar_produto" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="277dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="946dp"
        android:scaleX="3"
        android:scaleY="3"
        android:text="Produtos"
        app:layout_constraintBottom_toTopOf="@+id/lista_produtos_adm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lista_produtos_adm"
        android:layout_width="661dp"
        android:layout_height="660dp"
        android:layout_marginTop="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/voltar_adm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/Nome_Produto"
        android:layout_width="475dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/Quantidade_Produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lista_produtos_adm"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/Quantidade_Produto"
        android:layout_width="475dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:hint="Quantidade"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/Preco_Produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lista_produtos_adm"
        app:layout_constraintTop_toBottomOf="@+id/Nome_Produto" />

    <EditText
        android:id="@+id/Preco_Produto"
        android:layout_width="475dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:hint="PreÃ§o"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/adicionar_produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lista_produtos_adm"
        app:layout_constraintTop_toBottomOf="@+id/Quantidade_Produto" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="943dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="201dp"
        android:scaleX="3"
        android:scaleY="3"
        android:text="Cadastro de Produtos"
        app:layout_constraintBottom_toTopOf="@+id/Nome_Produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>