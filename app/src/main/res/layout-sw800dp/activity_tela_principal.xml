<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".Tela_Principal">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="600dp"
        android:layout_height="693dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="113dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/voltar_tela"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <ListView
            android:id="@+id/Produtos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="255dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="967dp"
        android:scaleX="3"
        android:scaleY="3"
        android:text="Produtos"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/voltar_tela"
        android:layout_width="511dp"
        android:layout_height="92dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="161dp"
        android:backgroundTint="#161414"
        android:text="VOLTAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/carrinho" />

    <Button
        android:id="@+id/carrinho"
        android:layout_width="500dp"
        android:layout_height="103dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="170dp"
        android:backgroundTint="#1D1C1C"
        android:text="CARRINHO"
        app:layout_constraintBottom_toTopOf="@+id/voltar_tela"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>