<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".Tela_Adm">

    <Button
        android:id="@+id/adicionar_produto"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:backgroundTint="#040404"
        android:text="Adicionar"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="266dp" />

    <Button
        android:id="@+id/voltar_adm"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="519dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#040404"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lista_produtos_adm"
        app:layout_constraintTop_toBottomOf="@+id/adicionar_produto" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="12dp"
        android:text="Produtos"
        app:layout_constraintBottom_toTopOf="@+id/lista_produtos_adm"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lista_produtos_adm"
        android:layout_width="185dp"
        android:layout_height="846dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="59dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Nome_Produto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/Nome_Produto"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:inputType="text"
        android:text="Nome"
        app:layout_constraintBottom_toTopOf="@+id/Quantidade_Produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lista_produtos_adm"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/Quantidade_Produto"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:inputType="text"
        android:text="Quantidade"
        app:layout_constraintBottom_toTopOf="@+id/Preco_Produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lista_produtos_adm"
        app:layout_constraintTop_toBottomOf="@+id/Nome_Produto" />

    <EditText
        android:id="@+id/Preco_Produto"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="text"
        android:text="PreÃ§o"
        app:layout_constraintBottom_toTopOf="@+id/adicionar_produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lista_produtos_adm"
        app:layout_constraintTop_toBottomOf="@+id/Quantidade_Produto" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="49dp"
        android:text="Cadastro de Produtos"
        app:layout_constraintBottom_toTopOf="@+id/Nome_Produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>